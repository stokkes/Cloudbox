{{caddy_dns}} {
	gzip
	timeouts 1h
	log /opt/caddy/logs/{{caddy_dns}}_access.log
	errors /opt/caddy/logs/{{caddy_dns}}_errors.log

	proxy / {{caddy_host}}:{{caddy_port}} {
		transparent
		websocket
		keepalive 12
		timeout 1h
	}
{% if cloudflare_api_token %}
	tls { 
		dns cloudflare
	}
{% endif %}
}
